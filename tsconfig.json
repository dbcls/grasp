{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "target": "esnext",
    "module": "Node16",
    "moduleResolution": "node16",
    "esModuleInterop": true
  },
  "lib": [
    "esnext",
    "dom"
  ],
  "include": [
    "main.ts",
    "validateConfig.ts",
    "lib/**/**/*.ts",
    "test/**/**/*.ts"
  ],
  "exclude": [
    "**/node_modules"
  ]
}